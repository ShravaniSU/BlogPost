<form action="/compose" method="post">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" id="postTitle" name="postTitle">
        <label>Post</label>
        <textarea class="form-control" name="postText" id="postText" rows="3"></textarea>
    </div>
